<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="battleEJB" transaction-type="JTA">
		
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/jdbc/resource</jta-data-source>

		<class>com.battleejb.entities.Address</class>
		<class>com.battleejb.entities.Comment</class>
		<class>com.battleejb.entities.Competition</class>
		<class>com.battleejb.entities.Photo</class>
		<class>com.battleejb.entities.Project</class>
		<class>com.battleejb.entities.Role</class>
		<class>com.battleejb.entities.User</class>
		<class>com.battleejb.entities.Voice</class>
	</persistence-unit>
</persistence>
